
{% set currentPath = app.request.get('_route') %}
{%if currentPath == 'tea_projects' or currentPath == 'tea_homepage' or currentPath == 'tea_about' or currentPath == 'tea_faq'  or currentPath == 'tea_search_index' or 'profil' in currentPath or 'user' in currentPath or 'formation' in currentPath or 'tea_contact' in currentPath or 'tea_mention' in currentPath or 'tea_teaandme' in currentPath or currentPath is null%}
    {%if ('tag' in  currentPath and currentPath != 'tea_teaandme_tag' ) or ('search' in  currentPath and currentPath != 'tea_search_index') %}
        {% set navClass = 'navbar-alt' %}
    {%else%}
        {% set navClass = 'nav_animated' %}
    {%endif%}
{%else%}
    {% set navClass = 'navbar-alt' %}
{%endif%}

<header class="header">
    <nav id="nav" class="navbar navbar-default navbar-fixed-top {{navClass}}" role="navigation">
        <div class="container relative-nav-container">
            <a class="toggle-button visible-xs-block" data-toggle="collapse" data-target="#navbar-collapse">
                <i class="fa fa-navicon"></i>
            </a>
            <a class="navbar-brand scroll" href="{{path('tea_homepage')}}">
                {% image '@TeaCampusCommonBundle/Resources/public/images/logos/logo_1.png'  output="images/ico/logo-1.jpg" %}
                <img class="normal-logo hidden-xs" src="{{ asset_url }}" alt="TeaCampus logo" width="50px"/>
                {% endimage %}
                {% image '@TeaCampusCommonBundle/Resources/public/images/logos/logo-w.png'  output="images/ico/logo-w.jpg" %}
                <img class="inverse-logo hidden-xs" src="{{ asset_url }}" alt="TeaCampus logo"  width="50px"/>
                {% endimage %}
                {% image '@TeaCampusCommonBundle/Resources/public/images/logos/logo-sign2.png'  output="images/ico/logo-s2.jpg" %}
                <img class="visible-xs-block" src="{{ asset_url }}" width="40" height="44" alt="TeaCampus logo"/>
                {% endimage %}
            </a>
            {{ include( 'TeaCampusCommonBundle:Sections:navbar_icons.html.twig') }}
            <div class="navbar-collapse collapse floated" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-with-inside clearfix navbar-right with-border">
                    <li class="{%if currentPath == 'tea_homepage'%}active{%endif%}">
                        <a href="{{path('tea_homepage')}}" title="{{ 'menu.home'|trans({},'messages') }}">{{ 'menu.home'|trans({},'messages') }}</a>
                    </li>
                    <li class="{%if currentPath == 'tea_about'%}active{%endif%}">
                        <a href="{{path('tea_about')}}" title="{{ 'menu.about.title'|trans({},'messages') }}">{{ 'menu.about.title'|trans({},'messages') }}</a>
                        <div class=" wrap-inside-nav">
                            <div class="inside-col">
                                <ul class="inside-nav">
                                    <li><a href="{{path('tea_about')}}#who" title="{{ 'menu.about.who'|trans({},'messages') }}">{{ 'menu.about.who'|trans({},'messages') }}</a></li>
                                    <li><a href="{{path('tea_about')}}#what" title="{{ 'menu.about.what'|trans({},'messages') }}">{{ 'menu.about.what'|trans({},'messages') }}</a></li>
                                    <li><a href="{{path('tea_about')}}#history" title="{{ 'menu.about.history'|trans({},'messages') }}">{{ 'menu.about.history'|trans({},'messages') }}</a></li>
                                    <li><a href="{{path('tea_about')}}#services" title="{{ 'menu.about.services'|trans({},'messages') }}">{{ 'menu.about.services'|trans({},'messages') }}</a></li>
                                    <li><a href="{{path('tea_about')}}#partners" title="{{ 'menu.about.partners'|trans({},'messages') }}">{{ 'menu.about.partners'|trans({},'messages') }}</a></li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    
                    
                    <li class="{%if 'formations' in currentPath%}active{%endif%}"><a href="{{path('tea_formations')}}" title="{{ 'menu.formations'|trans({},'messages') }}">{{ 'menu.formations'|trans({},'messages') }}</a></li>

                    <li class="{%if 'projects' in currentPath%}active{%endif%}"><a href="{{path('tea_projects')}}" title="{{ 'menu.projects'|trans({},'messages') }}">{{ 'menu.projects'|trans({},'messages') }}</a></li>
                    
                    <li class="{%if 'teaandme' in currentPath%}active{%endif%}"><a href="{{path('tea_teaandme')}}" title="{{ 'menu.teaandme'|trans({},'messages') }}">{{ 'menu.teaandme'|trans({},'messages') }}</a></li>
                    
                    <li class="{%if 'news' in currentPath%}active{%endif%}">
                        <a href="{{path('sonata_news_archive')}}" title="{{ 'menu.blog.title'|trans({},'messages') }}">{{ 'menu.blog.title'|trans({},'messages') }}</a>                      
                    </li>
                </ul>
            </div>
        </div>

        <div class="navbar-search">
            <div class="container">
                <form role="search" action="{{path('tea_search_index')}}" method="POST">
                    <div class="input-group">
                        <input type="text" placeholder="{{ 'menu.search'|trans({},'messages') }}" class="form-control" autocomplete="off">
                        <span class="input-group-btn">
                            <button type="reset" class="btn search-close" id="search-close">
                                <i class="fa fa-close"></i>
                            </button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </nav>
</header><!--/.header -->