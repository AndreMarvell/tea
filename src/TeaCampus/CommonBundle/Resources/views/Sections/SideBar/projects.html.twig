<div class="popular-posts">
    <h5><i class="fa {{icon}}"></i>{{title}}</h5>
    <ul class="clearfix">
        {% for project in articles %}
        <li>
            <div class="avatar pull-left">
                {% thumbnail project.media, 'square' with{'width':'50px', 'height':'50px', 'alt':project.title } %}
            </div>
            <a href="{{ path('tea_projects_show', { 'id': project.id } ) }}" class="title">{{project.title}}</a>
            <ul class="list-inline clearfix">
                <li><i class="fa fa-user"></i>{%if project.founder is null%}TEA{%else%}{{project.founder}}{%endif%}</li>
                <li><i class="fa fa-calendar"></i>{{project.createdAt|format_date('dd MMMM Y', 'fr', 'Europe/Paris', constant('IntlDateFormatter::LONG'))}}</li>
            
            </ul>
        </li>
        {%else%}
            <li></li>
        {%endfor%}
    </ul>
</div>