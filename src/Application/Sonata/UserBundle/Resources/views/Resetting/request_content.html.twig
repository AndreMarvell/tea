<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form">
    {% if invalid_username is defined %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}
    </div>
    {% endif %}
    <div class="form-group">
        <input type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}" style="width: 80%;"/>
    </div>
    <div class="form-group">
        <button type="submit" name="submit" class="btn btn-primary btn-xs"><i class="icon-lock icon-white glyphicon glyphicon-lock"></i>&nbsp;{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
    </div>
</form>
