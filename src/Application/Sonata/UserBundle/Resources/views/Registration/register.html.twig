{% trans_default_domain 'FOSUserBundle' %}

{#<h5>{{ 'link_register'|trans({}, 'SonataUserBundle') }} </h5>#}
<a href="#" class="signup-facebook">
    <i class="fa fa-facebook-square">&nbsp;&nbsp;</i>
    {{ 'register.facebook'|trans({}, 'messages') }}
</a>
<span class="or-sep">{{ 'register.or'|trans({}, 'messages') }}</span>
<form class="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
    {{form_errors(form)}}
    <div class="form-group">
        {{ form_widget(form.username, { 'attr': {'placeholder': 'form.username'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.email, { 'attr': {'placeholder': 'form.email'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'form.password'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'form.password_confirmation'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
    </div>
    <div class="form-group">
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="submit-button form-control" />
   </div>
   {{form_rest(form)}}
    {#<p>{{ 'register.already_member'|trans({}, 'messages') }}</p>#}
</form>
   
