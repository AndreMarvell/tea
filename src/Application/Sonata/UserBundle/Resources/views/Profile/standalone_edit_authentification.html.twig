{# empty Twig template #}
{% extends "::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% spaceless %}
    {% set wearesocial = true %} 
    {% block title %}
        {{ 'edit.authentification.title'|trans({}, 'messages') }} - {{ parent() }}
    {% endblock %}

    {% block main_content %}
        <section class="home-header login-register" style="min-height: 750px;">
            <div class="container">
                <div class="row">
                    <div class="center-block standalone-profile-edit"> 
                        <header class="section-header">
                            <p class="subhead">{{ 'register.subhead'| trans({},'messages') }}</p>
                            <h2>{{ 'edit.authentification.title'|trans({}, 'messages') }}</h2>
                        </header>
                        <div class="span6 col-lg-6">
                            <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1  standalone-login">
                                <header class="section-header">
                                    <h5 style="color:white">{{ 'title_user_edit_authentication'|trans({}, 'SonataUserBundle') }}</h5>
                                </header>
                                <form action="{{ path('sonata_user_profile_edit_authentication') }}" method="POST" class="form">
                                    {% if not form.username.vars.valid %}
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        {{ form_errors(form.username) }}
                                    </div>
                                    {% endif %}
                                    <div class="form-group">
                                        {{ form_widget(form.username, { 'attr': {'placeholder': 'form.username'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
                                    </div>
                                    {% if not form.email.vars.valid %}
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        {{ form_errors(form.email) }}
                                    </div>
                                    {% endif %}
                                    <div class="form-group">
                                        {{ form_widget(form.email, { 'attr': {'placeholder': 'form.email'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
                                    </div>
                                    {% if not form.current_password.vars.valid %}
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        {{ form_errors(form.current_password) }}
                                    </div>
                                    {% endif %}
                                    <div class="form-group">
                                        {{ form_widget(form.current_password, { 'attr': {'placeholder': 'form.current_password'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
                                    </div>
                                    {{ form_widget(form) }}
                                    <div class="form-group">
                                        <button type="submit" name="submit" class="btn btn-primary btn-xs">{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="span6 col-lg-6">
                            <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 standalone-login">
                                <header class="section-header">
                                    <h5 style="color:white">{{ 'sonata_change_password_link'|trans({}, 'SonataUserBundle') }}</h5>
                                </header>
                                {% render url("tea_change_password_from_edit") %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>                   
    {% endblock %}

    {% block scripts %}
    {% endblock %}
{% endspaceless %}