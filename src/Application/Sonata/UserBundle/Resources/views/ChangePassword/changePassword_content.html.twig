
{%if app.user.passwordUpdated%}
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form">
    
        {% if not form.current_password.vars.valid %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ form_errors(form.current_password) }}
        </div>
        {% endif %}
        <div class="form-group">
            {{ form_widget(form.current_password, { 'attr': {'placeholder': 'form.current_password'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
        </div>
        {% if not form.new.vars.valid %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ form_errors(form.new.first) }}
        </div>
        {% endif %}
        <div class="form-group">
            {{ form_widget(form.new.first, { 'attr': {'placeholder': 'form.new_password'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.new.second, { 'attr': {'placeholder': 'form.new_password_confirmation'|trans({},'FOSUserBundle'), 'class':'form-control'} }) }}
        </div>
        <div class="form-group">
            <button type="submit" name="submit" class="btn btn-primary btn-xs"><i class="icon-lock icon-white glyphicon glyphicon-lock"></i>&nbsp;{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>


    </form>
{%else%}
    <div>{{ 'edit.password.nocreated1'|trans({}, 'messages') }}</div>
    <div>{{ 'edit.password.nocreated2'|trans({}, 'messages') }}</div>
    <div>{{ 'edit.password.nocreated3'|trans({}, 'messages') }}</div>

    <div class="row" style="margin-top: 50px">
    <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-primary btn-xs"><i class="icon-lock icon-white glyphicon glyphicon-lock"></i>&nbsp;{{ 'edit.password.request'|trans({}, 'messages') }}</a>
    </div>
{%endif%}

