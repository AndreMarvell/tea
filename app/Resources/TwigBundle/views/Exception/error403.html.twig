{% extends "::base.html.twig" %}
{% spaceless %}
{% trans_default_domain "TeaCampusCommonBundle" %}
{% block title %}
        {{ 'error.403.name'| trans({},'messages') }} - {{ parent() }}
{% endblock %}
{% block main_content %}
        <!-- Home - Header -->
        <!-- ++++++++++++++++++++++++++++++++++++++++ -->
        <!-- About - Header -->
        <!-- ++++++++++++++++++++++++++++++++++++++++ -->
        <section class="about-header" style="min-height: 720px;">
            <div class="container">	
                <div class="row">
                    <div class="col-md-12 wow fadeInUp" data-wow-duration="2s" >
                        <img src="{{ asset('bundles/teacampuscommon/images/403.png') }}" alt="TeaCampus 403"  width="250px"/>
                        <p class="subhead">{{ 'error.403.title'| trans({},'messages') }}</p>
                        <div class="path">{{ 'error.403.subhead'| trans({},'messages') }}</div>
                        <h4 style="color:white;">{{ 'error.403.text'| trans({},'messages') }}</h4>
